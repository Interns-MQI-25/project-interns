<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monitor Records - Marquardt India Pvt. Ltd.</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <main class="ml-0 lg:ml-64 flex flex-col h-screen">
        <!-- Fixed Header Section -->
        <div class="flex-shrink-0 p-4 sm:p-6 bg-gray-50 border-b border-gray-200">
            <%- include('../partials/messages') %>
            
            <div class="mb-4">
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Assignment Records & Request History</h1>
                <p class="text-gray-600">View all product assignments and request history</p>
            </div>
        </div>
        
        <!-- Scrollable Content Area -->
        <div class="flex-1 overflow-y-auto p-4 sm:p-6">
        
        <!-- Product Request History -->
        <div class="bg-white shadow rounded-lg overflow-hidden mb-8">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Product Request History</h3>
                <div class="overflow-x-auto w-full">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requestor</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Purpose</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requested Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Processed Date</th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (productRequests && productRequests.length > 0) { %>
                                <% productRequests.forEach(request => { %>
                                    <tr>
                                        <td class="px-6 py-4 text-sm font-medium text-gray-900">
                                            <%= request.product_name || 'N/A' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= request.employee_name || 'Unknown' %>
                                            <% if (request.requestor_role === 'monitor') { %>
                                                <span class="ml-2 px-2 py-1 text-xs bg-purple-100 text-purple-800 rounded-full">Monitor</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 text-sm">
                                            <% if (request.status === 'rejected' && request.remarks) { %>
                                                <div class="text-red-600 font-medium">
                                                    <%= request.remarks %>
                                                </div>
                                            <% } else if (request.status === 'approved' && request.remarks) { %>
                                                <div class="text-gray-500">
                                                    <%= request.remarks %>
                                                </div>
                                            <% } else { %>
                                                <div class="text-gray-500">
                                                    <%= request.purpose || 'No purpose specified' %>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= request.formatted_requested_at || 'N/A' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <% if (request.status === 'approved') { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">✓ Approved</span>
                                            <% } else if (request.status === 'rejected') { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">✗ Rejected</span>
                                            <% } else { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">⏳ Pending</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= request.formatted_processed_at || 'Not processed' %>
                                        </td>
                                        <td class="px-6 py-4 text-center">
                                            <% if (request.status === 'pending' && request.requestor_role === 'monitor') { %>
                                                <form action="/monitor/cancel-request" method="POST" onsubmit="return confirm('Are you sure you want to cancel this request?');" class="inline">
                                                    <input type="hidden" name="request_id" value="<%= request.request_id %>" />
                                                    <button type="submit" title="Cancel Request" class="inline-flex items-center px-2 py-1 border border-red-300 rounded text-xs font-medium text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-500 transition-colors">
                                                        <i class="fas fa-times mr-1"></i> Cancel
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <span class="text-gray-400 text-xs">-</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                        No request history found
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <!-- Tabbed Records Section -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-4 py-5 sm:p-6">
                <!-- Tab Navigation -->
                <div class="border-b border-gray-200 mb-4">
                    <nav class="-mb-px flex space-x-8">
                        <button onclick="showTab('assignments')" id="assignments-tab" class="tab-button active py-2 px-1 border-b-2 border-blue-500 font-medium text-sm text-blue-600">
                            Product Assignments
                        </button>
                        <button onclick="showTab('extensions')" id="extensions-tab" class="tab-button py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
                            Extension Requests
                        </button>
                    </nav>
                </div>

                <!-- Assignments Tab -->
                <div id="assignments-content" class="tab-content">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Product Return Status</h3>
                <div class="overflow-x-auto w-full">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employee</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Return Reason</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requested Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Processed Date</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (assignments && assignments.length > 0) { %>
                                <% assignments.forEach(assignment => { %>
                                    <tr>
                                        <td class="px-6 py-4 text-sm font-medium text-gray-900">
                                            <%= assignment.product_name || 'N/A' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= assignment.employee_name || 'Unknown' %>
                                        </td>
                                        <td class="px-6 py-4 text-sm">
                                            <% if (assignment.remarks && assignment.remarks.startsWith('RETURN_REJECTED')) { %>
                                                <div class="text-red-600 font-medium">
                                                    <%= assignment.remarks.replace('RETURN_REJECTED: ', '') %>
                                                </div>
                                            <% } else if (assignment.remarks === 'RETURN_REQUESTED') { %>
                                                <div class="text-gray-500">
                                                    Return requested
                                                </div>
                                            <% } else if (assignment.is_returned) { %>
                                                <div class="text-gray-500">
                                                    <%= assignment.remarks || 'Product returned' %>
                                                </div>
                                            <% } else { %>
                                                <div class="text-gray-500">
                                                    <%= assignment.remarks || 'No return request' %>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <% if (assignment.return_status === 'requested' || assignment.return_status === 'approved' || assignment.return_status === 'rejected') { %>
                                                <%= assignment.formatted_assigned_at || 'N/A' %>
                                            <% } else { %>
                                                <%= assignment.formatted_assigned_at || 'N/A' %>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <% if (assignment.is_returned) { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">✓ Returned</span>
                                            <% } else if (assignment.remarks && assignment.remarks.startsWith('RETURN_REJECTED')) { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">✗ Rejected</span>
                                            <% } else if (assignment.remarks === 'RETURN_REQUESTED') { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">⏳ Pending</span>
                                            <% } else { %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">📦 In Use</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= assignment.formatted_returned_at || (assignment.returned_at ? new Date(assignment.returned_at).toLocaleDateString() : 'Not processed') %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                        No assignment records found
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                </div>

                <!-- Extensions Tab -->
                <div id="extensions-content" class="tab-content hidden">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Extension Request History</h3>
                    <div class="overflow-x-auto w-full">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employee</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Original Return Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">New Return Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requested Date</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% if (extensionRequests && extensionRequests.length > 0) { %>
                                    <% extensionRequests.forEach(extension => { %>
                                        <tr>
                                            <td class="px-6 py-4 text-sm font-medium text-gray-900">
                                                <%= extension.product_name || 'N/A' %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                <%= extension.employee_name || 'Unknown' %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                <% if (extension.return_date) { %>
                                                    <%= new Date(extension.return_date).toLocaleDateString() %>
                                                <% } else { %>
                                                    N/A
                                                <% } %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                <% if (extension.new_return_date) { %>
                                                    <%= new Date(extension.new_return_date).toLocaleDateString() %>
                                                <% } else { %>
                                                    N/A
                                                <% } %>
                                            </td>
                                            <td class="px-6 py-4 text-sm text-gray-500">
                                                <%= extension.extension_reason || 'No reason provided' %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <% if (extension.extension_status === 'approved') { %>
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">✓ Approved</span>
                                                <% } else if (extension.extension_status === 'rejected') { %>
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">✗ Rejected</span>
                                                <% } else { %>
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">⏳ Pending</span>
                                                <% } %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                <% if (extension.extension_requested_at) { %>
                                                    <%= new Date(extension.extension_requested_at).toLocaleDateString() %>
                                                <% } else { %>
                                                    N/A
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                            No extension requests found
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </main>

    <script>
        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active', 'border-blue-500', 'text-blue-600');
                button.classList.add('border-transparent', 'text-gray-500');
            });
            
            // Show selected tab content
            document.getElementById(tabName + '-content').classList.remove('hidden');
            
            // Add active class to selected tab
            const activeTab = document.getElementById(tabName + '-tab');
            activeTab.classList.add('active', 'border-blue-500', 'text-blue-600');
            activeTab.classList.remove('border-transparent', 'text-gray-500');
        }
    </script>
</body>
</html>