<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Products - Marquardt India Pvt. Ltd.</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <main class="ml-0 lg:ml-64 flex flex-col h-screen">
        <!-- Fixed Header Section -->
        <div class="flex-shrink-0 p-4 sm:p-6 bg-gray-50 border-b border-gray-200">
            <%- include('../partials/messages') %>
            
            <div class="mb-4">
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">My Products</h1>
                <p class="text-gray-600">Welcome <%= user.full_name %>! Complete history of all products assigned to you</p>
            </div>
        </div>
        
        <!-- Scrollable Content Area -->
        <div class="flex-1 overflow-y-auto p-4 sm:p-6">

        <!-- My Products Table -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    Product Assignment History (<%= myProducts.length %> items)
                </h3>
                
                <% if (myProducts.length === 0) { %>
                    <div class="text-center py-12">
                        <div class="text-gray-400">
                            <i class="fas fa-laptop text-4xl mb-4"></i>
                            <p class="text-lg">No product history found</p>
                            <p class="text-sm mt-2">Visit the stock page to request your first product</p>
                        </div>
                        <a href="/employee/stock" class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                            <i class="fas fa-boxes mr-2"></i>Browse Stock
                        </a>
                    </div>
                <% } else { %>
                    <div>
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 30%">
                                        Product Name
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 10%">
                                        Issued On
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 12%">
                                        Expected Return
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 10%">
                                        Days Left
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 15%">
                                        Status
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 18%">
                                        Remarks
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 15%">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% myProducts.forEach(product => { %>
                                    <% 
                                        const returnDate = new Date(product.return_date);
                                        const today = new Date();
                                        const daysLeft = Math.ceil((returnDate - today) / (1000 * 60 * 60 * 24));
                                    %>
                                    <tr>
                                        <td class="px-6 py-4">
                                            <div class="text-sm font-medium text-gray-900"><%= product.product_name %></div>
                                            <% if (product.serial_number) { %>
                                                <div class="text-xs text-gray-500">S/N: <%= product.serial_number %></div>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= new Date(product.assigned_at).toLocaleDateString() %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <% if (product.return_date) { %>
                                                <%= returnDate.toLocaleDateString() %>
                                                <% if (product.extension_status === 'requested') { %>
                                                    <span class="ml-2 px-2 py-1 text-xs rounded bg-yellow-100 text-yellow-800">Extension Requested</span>
                                                <% } else if (product.extension_status === 'approved' && product.new_return_date) { %>
                                                    <br/>
                                                    <span class="px-2 py-1 text-xs rounded bg-green-100 text-green-800">Extension Approved: <%= new Date(product.new_return_date).toLocaleDateString() %></span>
                                                <% } else if (product.extension_status === 'rejected') { %>
                                                    <span class="ml-2 px-2 py-1 text-xs rounded bg-red-100 text-red-800">Extension Rejected</span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-gray-400">N/A</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            <% if (product.is_returned) { %>
                                                <span class="text-gray-500">Returned</span>
                                            <% } else if (product.return_date && daysLeft < 0) { %>
                                                <span class="text-red-600 font-medium">Overdue by <%= Math.abs(daysLeft) %> days</span>
                                            <% } else if (product.return_date && daysLeft === 0) { %>
                                                <span class="text-orange-600 font-medium">Due today</span>
                                            <% } else if (product.return_date && daysLeft <= 3) { %>
                                                <span class="text-yellow-600 font-medium"><%= daysLeft %> days left</span>
                                            <% } else if (product.return_date) { %>
                                                <span class="text-green-600"><%= daysLeft %> days left</span>
                                            <% } else { %>
                                                <span class="text-gray-400">N/A</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <% if (product.is_returned) { %>
                                                <div class="flex flex-col space-y-1">
                                                    <span class="text-xs font-medium text-gray-600">
                                                        Returned
                                                    </span>
                                                    <% if (product.returned_at) { %>
                                                        <span class="text-xs text-gray-500">
                                                            <%= new Date(product.returned_at).toLocaleDateString() %>
                                                        </span>
                                                    <% } %>
                                                </div>
                                            <% } else if (product.return_status === 'requested') { %>
                                                <span class="text-xs font-medium text-gray-600">
                                                    Return Requested
                                                </span>
                                            <% } else if (product.return_status === 'rejected') { %>
                                                <span class="text-xs font-medium text-gray-600">
                                                    Return Rejected
                                                </span>
                                            <% } else { %>
                                                <span class="text-xs font-medium text-gray-600">
                                                    In Use
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (product.remarks && product.remarks !== 'null' && product.remarks.trim() !== '') { %>
                                                <div class="bg-gray-50 p-2 rounded text-xs border-l-2 border-blue-400">
                                                    <%= product.remarks %>
                                                </div>
                                            <% } else { %>
                                                <span class="text-gray-400 text-sm">No remarks</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-500">
                                            <% if (product.is_returned) { %>
                                                <span class="text-gray-400">Returned</span>
                                            <% } else if (product.return_status === 'requested') { %>
                                                <span class="text-orange-600">Pending Approval</span>
                                            <% } else if (product.return_status === 'rejected') { %>
                                                <div class="flex space-x-3">
                                                    <form action="/employee/return-product" method="POST" onsubmit="return confirm('Are you sure you want to request return of this product again?');">
                                                        <input type="hidden" name="assignment_id" value="<%= product.assignment_id %>" />
                                                        <button type="submit" class="text-blue-600 hover:text-blue-800 text-xs font-medium">
                                                            ↩ Return
                                                        </button>
                                                    </form>
                                                    <button onclick="showExtensionModal('<%= product.assignment_id %>', '<%= product.product_name %>')" class="text-green-600 hover:text-green-800 text-xs font-medium">
                                                        ⏰ Extend
                                                    </button>
                                                </div>
                                            <% } else { %>
                                                <div class="flex space-x-3">
                                                    <form action="/employee/return-product" method="POST" onsubmit="return confirm('Are you sure you want to request return of this product?');">
                                                        <input type="hidden" name="assignment_id" value="<%= product.assignment_id %>" />
                                                        <button type="submit" class="text-blue-600 hover:text-blue-800 text-xs font-medium">
                                                            ↩ Return
                                                        </button>
                                                    </form>
                                                    <% if (product.extension_status === 'requested') { %>
                                                        <span class="text-xs font-medium text-gray-600">
                                                            ⏳ Pending
                                                        </span>
                                                    <% } else if (product.extension_status === 'approved') { %>
                                                        <span class="text-xs font-medium text-gray-600">
                                                            ✓ Extended
                                                        </span>
                                                    <% } else if (product.extension_status === 'rejected') { %>
                                                        <button onclick="showExtensionModal('<%= product.assignment_id %>', '<%= product.product_name %>')" class="text-green-600 hover:text-green-800 text-xs font-medium">
                                                            ⏰ Extend
                                                        </button>
                                                    <% } else { %>
                                                        <button onclick="showExtensionModal('<%= product.assignment_id %>', '<%= product.product_name %>')" class="text-green-600 hover:text-green-800 text-xs font-medium">
                                                            ⏰ Extend
                                                        </button>
                                                    <% } %>
                                                </div>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
        </div> <!-- End scrollable content area -->
    </main>
    <!-- Extension Request Modal -->
    <div id="extensionModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
            <div class="mt-3">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Request Extension</h3>
                <form id="extensionForm" action="/employee/request-extension" method="POST">
                    <input type="hidden" id="extensionAssignmentId" name="assignment_id" />
                    
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Product</label>
                        <p id="extensionProductName" class="text-sm text-gray-600 bg-gray-50 p-2 rounded"></p>
                    </div>
                    
                    <div class="mb-4">
                        <label for="extensionReason" class="block text-sm font-medium text-gray-700 mb-2">Reason for Extension</label>
                        <textarea id="extensionReason" name="extension_reason" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Please explain why you need an extension..." required></textarea>
                    </div>
                    
                    <div class="mb-4">
                        <label for="newReturnDate" class="block text-sm font-medium text-gray-700 mb-2">New Return Date</label>
                        <input type="date" id="newReturnDate" name="new_return_date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                    </div>
                    
                    <div class="flex justify-end space-x-3">
                        <button type="button" onclick="hideExtensionModal()" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300">
                            Cancel
                        </button>
                        <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700">
                            Submit Request
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function showExtensionModal(assignmentId, productName) {
            document.getElementById('extensionAssignmentId').value = assignmentId;
            document.getElementById('extensionProductName').textContent = productName;
            
            // Set minimum date to tomorrow
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            document.getElementById('newReturnDate').min = tomorrow.toISOString().split('T')[0];
            
            document.getElementById('extensionModal').classList.remove('hidden');
        }
        
        function hideExtensionModal() {
            document.getElementById('extensionModal').classList.add('hidden');
            document.getElementById('extensionForm').reset();
        }
        
        // Close modal when clicking outside
        document.getElementById('extensionModal').addEventListener('click', function(e) {
            if (e.target === this) {
                hideExtensionModal();
            }
        });
    </script>
</body>
</html>