<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Product Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <main class="ml-64 p-6">
        <%- include('../partials/messages') %>
        
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
            <p class="text-gray-600">Welcome back, <%= user.full_name %>!</p>
        </div>
        
        <!-- Dashboard Cards -->
        <div class="flex flex-col items-center mt-16 space-y-8">
            <!-- Top Two Cards -->
            <div class="flex gap-8 justify-center">
                <a href="/admin/employees" class="group">
                    <div class="bg-white hover:bg-blue-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-blue-200 w-96 h-72">
                        <div class="p-8 text-center">
                            <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-users text-xl text-blue-500"></i>
                            </div>
                            <h3 class="text-xl font-medium text-gray-800 mb-2">Manage Employees</h3>
                            <p class="text-sm text-gray-500">User Management</p>
                        </div>
                    </div>
                </a>
                <a href="/admin/monitors" class="group">
                    <div class="bg-white hover:bg-green-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-green-200 w-96 h-72">
                        <div class="p-8 text-center">
                            <div class="w-16 h-16 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-user-shield text-xl text-green-500"></i>
                            </div>
                            <h3 class="text-xl font-medium text-gray-800 mb-2">Manage Monitors</h3>
                            <p class="text-sm text-gray-500">Assign Roles</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Bottom Two Cards -->
            <div class="flex gap-8 justify-center">
                <a href="/admin/stock" class="group">
                    <div class="bg-white hover:bg-purple-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-purple-200 w-96 h-72">
                        <div class="p-8 text-center">
                            <div class="w-16 h-16 bg-purple-50 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-boxes text-xl text-purple-500"></i>
                            </div>
                            <h3 class="text-xl font-medium text-gray-800 mb-2">Stock Management</h3>
                            <p class="text-sm text-gray-500">Inventory Overview</p>
                        </div>
                    </div>
                </a>
                <a href="/admin/registration-requests" class="group">
                    <div class="bg-white hover:bg-orange-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-orange-200 w-96 h-72">
                        <div class="p-8 text-center">
                            <div class="w-16 h-16 bg-orange-50 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-user-plus text-xl text-orange-500"></i>
                            </div>
                            <h3 class="text-xl font-medium text-gray-800 mb-2">Registration Requests</h3>
                            <p class="text-sm text-gray-500"><span id="dashboardPendingRegistrations"><%= stats ? stats.pendingRegistrations : 0 %></span> Pending</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        

    </main>
    
    <script>
        // Function to update dashboard stats
        async function updateDashboardStats() {
            try {
                const response = await fetch('/admin/dashboard-stats');
                if (response.ok) {
                    const data = await response.json();
                    
                    // Update dashboard card
                    const dashboardPendingRegistrations = document.getElementById('dashboardPendingRegistrations');
                    if (dashboardPendingRegistrations) {
                        dashboardPendingRegistrations.textContent = data.pendingRegistrations;
                    }
                }
            } catch (error) {
                console.error('Error updating dashboard stats:', error);
            }
        }
        
        // Update stats every 30 seconds
        setInterval(updateDashboardStats, 30000);
        
        // Update stats when page loads
        document.addEventListener('DOMContentLoaded', updateDashboardStats);
        
        // Update navbar counts
        function updateNavbarCounts() {
            fetch('/api/live-counts')
                .then(response => response.json())
                .then(data => {
                    const badge = document.getElementById('pendingRegistrationsCount');
                    if (badge) {
                        badge.textContent = data.pendingRegistrations;
                    }
                })
                .catch(error => console.error('Error:', error));
        }
        
        // Update navbar counts every 5 seconds
        updateNavbarCounts();
        setInterval(updateNavbarCounts, 5000);
    </script>
