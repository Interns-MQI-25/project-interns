<script>
function updateLiveActivity() {
    fetch('/api/recent-activity')
        .then(response => response.json())
        .then(activities => {
            const feed = document.getElementById('liveActivityFeed');
            if (!feed) return;

            if (activities.length === 0) {
                feed.innerHTML = '<div class="text-gray-400">No recent activity</div>';
                return;
            }

            const feedHTML = activities.slice(0, 3).map(activity => {
                const timeAgo = getTimeAgo(new Date(activity.timestamp));
                return `
                    <div class="text-gray-600 truncate">
                        <span class="text-blue-600">•</span> ${activity.message.substring(0, 40)}...
                        <div class="text-gray-400 text-xs">${timeAgo}</div>
                    </div>
                `;
            }).join('');

            feed.innerHTML = feedHTML;
        })
        .catch(error => {
            const feed = document.getElementById('liveActivityFeed');
            if (feed) {
                feed.innerHTML = '<div class="text-red-400">Error loading</div>';
            }
        });
}

function getTimeAgo(date) {
    const now = new Date();
    const diffMs = now - date;
    const diffMins = Math.floor(diffMs / 60000);
    
    if (diffMins < 1) return 'Just now';
    if (diffMins < 60) return `${diffMins}m ago`;
    
    const diffHours = Math.floor(diffMins / 60);
    if (diffHours < 24) return `${diffHours}h ago`;
    
    return 'Yesterday';
}

function updateLiveCounts() {
    fetch('/api/live-counts')
        .then(res => {
            if (!res.ok) {
                throw new Error('API response not ok: ' + res.status);
            }
            return res.json();
        })
        .then(data => {
            // Update pending requests count (for monitors)
            const pendingRequestsCount = document.getElementById('pendingRequestsCount');
            if (pendingRequestsCount) {
                pendingRequestsCount.textContent = data.pendingRequests || 0;
                if (data.pendingRequests > 0) {
                    pendingRequestsCount.style.display = 'inline-block';
                } else {
                    pendingRequestsCount.style.display = 'none';
                }
            }
            
            // Update pending registrations count (for admins)
            const pendingRegistrationsCount = document.getElementById('pendingRegistrationsCount');
            if (pendingRegistrationsCount) {
                pendingRegistrationsCount.textContent = data.pendingRegistrations || 0;
                if (data.pendingRegistrations > 0) {
                    pendingRegistrationsCount.style.display = 'inline-block';
                } else {
                    pendingRegistrationsCount.style.display = 'none';
                }
            }
            
            // Update employee updates count (for employees)
            const employeeUpdatesCount = document.getElementById('employeeUpdatesCount');
            if (employeeUpdatesCount) {
                console.log('Employee updates count:', data.employeeUpdates);
                employeeUpdatesCount.textContent = data.employeeUpdates || 0;
                if (data.employeeUpdates > 0) {
                    employeeUpdatesCount.style.display = 'inline-block';
                    console.log('Showing employee updates badge with count:', data.employeeUpdates);
                } else {
                    employeeUpdatesCount.style.display = 'none';
                    console.log('Hiding employee updates badge');
                }
            } else {
                console.log('employeeUpdatesCount element not found');
            }
        })
        .catch(error => {
            console.error('Error updating live counts:', error);
        });
}

// Active page highlighting
function setActiveNavLink() {
    const currentPath = window.location.pathname;
    const sidebarLinks = document.querySelectorAll('.sidebar-link');
    
    sidebarLinks.forEach(link => {
        link.classList.remove('bg-primary-100', 'text-primary-700', 'border-primary-500');
        link.classList.add('text-gray-600');
        
        const linkHref = link.getAttribute('href');
        if (linkHref && currentPath.includes(linkHref) && linkHref !== '/') {
            link.classList.remove('text-gray-600');
            link.classList.add('bg-primary-100', 'text-primary-700');
        }
    });
}

// Sidebar open/close logic
document.addEventListener('DOMContentLoaded', function() {
    // Initialize live counts and activity
    updateLiveCounts();
    updateLiveActivity();
    setInterval(updateLiveCounts, 5000);
    setInterval(updateLiveActivity, 10000);
    
    // Set active navigation link
    setActiveNavLink();

    // Mobile sidebar controls
    const closeSidebarBtn = document.getElementById('closeSidebarBtn');
    const openSidebarBtn = document.getElementById('openSidebarBtn');
    const sidebar = document.getElementById('sidebar');
    const mobileOverlay = document.getElementById('mobile-overlay');
    
    if (closeSidebarBtn && sidebar && openSidebarBtn) {
        closeSidebarBtn.addEventListener('click', function() {
            sidebar.classList.add('-translate-x-full');
            if (mobileOverlay) mobileOverlay.classList.add('hidden');
        });

        openSidebarBtn.addEventListener('click', function() {
            sidebar.classList.remove('-translate-x-full');
            if (mobileOverlay) mobileOverlay.classList.remove('hidden');
        });
        
        if (mobileOverlay) {
            mobileOverlay.addEventListener('click', function() {
                sidebar.classList.add('-translate-x-full');
                mobileOverlay.classList.add('hidden');
            });
        }
    }
    
    // Handle window resize
    window.addEventListener('resize', function() {
        if (window.innerWidth >= 1024) { // lg breakpoint
            sidebar.classList.remove('-translate-x-full');
            if (mobileOverlay) mobileOverlay.classList.add('hidden');
        }
    });
});
</script>