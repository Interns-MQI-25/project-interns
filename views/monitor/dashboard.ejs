<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- End scrollable content area -->
    
    <title>Monitor Dashboard - Marquardt India Pvt. Ltd.</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/responsive.css">
</head>
<body class="bg-gray-50">
    <!-- <%- include('../partials/navbar') %> -->
    
    <main class="ml-0 lg:ml-64 flex flex-col h-screen">
        <!-- Fixed Header Section -->
        <div class="flex-shrink-0 p-4 sm:p-6 bg-gray-50 border-b border-gray-200">
            <%- include('../partials/messages') %>
            <div class="mb-4">
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Monitor Dashboard</h1>
                <p class="text-gray-600">Welcome back, <%= user.full_name %>!</p>
            </div>
        </div>
        
        <!-- Scrollable Content Area -->
        <div class="flex-1 overflow-y-auto p-4 sm:p-6">
            <!-- Dashboard Cards -->
            <div class="flex flex-col items-center mt-16 space-y-8">
            <!-- Top Two Cards -->
            <div class="flex gap-8 justify-center">
                <!-- Approvals Card -->
                <a href="/monitor/approvals" class="group">
                    <div class="bg-white hover:bg-green-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-green-200 w-96 h-72">
                        <div class="text-center h-full flex flex-col justify-center items-center">
                            <div class="w-16 h-16 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-1">
                                <i class="fas fa-check-circle text-xl text-green-600"></i>
                            </div>
                            <h3 class="text-xl font-medium text-gray-800 mb-1">Approvals</h3>
                            <p class="text-sm text-gray-500">Pending Requests</p>
                        </div>
                    </div>
                </a>
                <!-- Records Card -->
                <a href="/monitor/records" class="group">
                    <div class="bg-white hover:bg-blue-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-blue-200 w-96 h-72">
                        <div class="text-center h-full flex flex-col justify-center items-center">
                            <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-1">
                                <i class="fas fa-history text-xl text-blue-600"></i>
                            </div>
                            <h3 class="text-xl font-medium text-gray-800 mb-1">Records</h3>
                            <p class="text-sm text-gray-500">Assignment History</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Bottom Two Cards -->
            <div class="flex gap-8 justify-center">
                <!-- Stock Card -->
                <a href="/monitor/stock" class="group">
                    <div class="bg-white hover:bg-purple-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-purple-200 w-96 h-72">
                        <div class="text-center h-full flex flex-col justify-center items-center">
                            <div class="w-16 h-16 bg-purple-50 rounded-full flex items-center justify-center mx-auto mb-1">
                                <i class="fas fa-boxes text-xl text-purple-600"></i>
                            </div>
                            <h3 class="text-xl font-medium text-gray-800 mb-1">Stock</h3>
                            <p class="text-sm text-gray-500">View Inventory</p>
                        </div>
                    </div>
                </a>
                <!-- Inventory Card -->
                <a href="/monitor/inventory" class="group">
                    <div class="bg-white hover:bg-orange-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-orange-200 w-96 h-72">
                        <div class="text-center h-full flex flex-col justify-center items-center">
                            <div class="w-16 h-16 bg-orange-50 rounded-full flex items-center justify-center mx-auto mb-1">
                                <i class="fas fa-warehouse text-xl text-orange-600"></i>
                            </div>
                            <h3 class="text-xl font-medium text-gray-800 mb-1">Inventory</h3>
                            <p class="text-sm text-gray-500">Manage Products</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        
       
       
    </main>
</body>
</html>