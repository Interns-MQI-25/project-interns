<!DOCTYPE html>
<html>
<head>
  <title>All Request History</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>All Product Request History</h1>

  <% if (requests && requests.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Request ID</th>
          <th>Employee Name</th>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Purpose</th>
          <th>Status</th>
          <th>Requested At</th>
          <th>Processed By</th>
        </tr>
      </thead>
      <tbody>
        <% requests.forEach(request => { %>
          <tr>
            <td><%= request.request_id %></td>
            <td><%= request.employee_name %></td>
            <td><%= request.product_name %></td>
            <td><%= request.quantity %></td>
            <td><%= request.purpose %></td>
            <td><%= request.status %></td>
            <td><%= request.requested_at %></td>
            <td><%= request.processed_by_name || 'N/A' %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No product requests found.</p>
  <% } %>

  <p><a href="/monitor/dashboard">Back to Monitor Dashboard</a></p>
</body>
</html>