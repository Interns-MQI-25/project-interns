<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Marquardt India Pvt. Ltd.</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <main class="ml-0 lg:ml-64 flex flex-col h-screen">
        <!-- Fixed Header Section -->
        <div class="flex-shrink-0 p-4 sm:p-6 bg-gray-50 border-b border-gray-200">
            <%- include('../partials/messages') %>
            
            <div class="mb-4 flex justify-between items-start">
                <div>
                    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Admin Dashboard</h1>
                    <p class="text-gray-600">Welcome back, <%= user.full_name %>!</p>
                </div>
            </div>
        </div>
        
        <!-- Scrollable Content Area -->
        <div class="flex-1 overflow-y-auto p-4 sm:p-6">
            <!-- Dashboard Cards -->
        <div class="flex justify-center items-start min-h-full">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-8 w-full max-w-md sm:max-w-2xl">
            <!-- Manage Employees Card -->
            <a href="/admin/employees" class="group">
                <div class="bg-white hover:bg-blue-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-blue-200 aspect-square">
                    <div class="text-center h-full flex flex-col justify-center items-center">
                        <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center mb-1">
                            <i class="fas fa-users text-lg text-blue-500"></i>
                        </div>
                        <h3 class="text-base font-medium text-gray-800">Manage Employees</h3>
                        <p class="text-xs text-gray-500">User Management</p>
                    </div>
                </div>
            </a>

            <!-- Manage Monitors Card -->
            <a href="/admin/monitors" class="group">
                <div class="bg-white hover:bg-green-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-green-200 aspect-square">
                    <div class="text-center h-full flex flex-col justify-center items-center">
                        <div class="w-12 h-12 bg-green-50 rounded-full flex items-center justify-center mb-1">
                            <i class="fas fa-user-shield text-lg text-green-500"></i>
                        </div>
                        <h3 class="text-base font-medium text-gray-800">Manage Monitors</h3>
                        <p class="text-xs text-gray-500">Assign Roles</p>
                    </div>
                </div>
            </a>
            
            <!-- Stock Management Card -->
            <a href="/admin/stock" class="group">
                <div class="bg-white hover:bg-purple-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-purple-200 aspect-square">
                    <div class="text-center h-full flex flex-col justify-center items-center">
                        <div class="w-12 h-12 bg-purple-50 rounded-full flex items-center justify-center mb-1">
                            <i class="fas fa-boxes text-lg text-purple-500"></i>
                        </div>
                        <h3 class="text-base font-medium text-gray-800">Stock Management</h3>
                        <p class="text-xs text-gray-500">Inventory Overview</p>
                    </div>
                </div>
            </a>

            <!-- Registration Requests Card -->
            <a href="/admin/registration-requests" class="group">
                <div class="bg-white hover:bg-orange-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-orange-200 aspect-square">
                    <div class="text-center h-full flex flex-col justify-center items-center">
                        <div class="w-12 h-12 bg-orange-50 rounded-full flex items-center justify-center mb-1">
                            <i class="fas fa-user-plus text-lg text-orange-500"></i>
                        </div>
                        <h3 class="text-base font-medium text-gray-800">Registration Requests</h3>
                        <p class="text-xs text-gray-500"><span id="dashboardPendingRegistrations"><%= stats ? stats.pendingRegistrations : 0 %></span> Pending</p>
                    </div>
                </div>
            </a>
            </div>
        </div>
    </main>
    
    <script>
        // Function to update dashboard stats
        async function updateDashboardStats() {
            try {
                const response = await fetch('/admin/dashboard-stats');
                if (response.ok) {
                    const data = await response.json();
                    
                    // Update dashboard card
                    const dashboardPendingRegistrations = document.getElementById('dashboardPendingRegistrations');
                    if (dashboardPendingRegistrations) {
                        dashboardPendingRegistrations.textContent = data.pendingRegistrations;
                    }
                }
            } catch (error) {
                console.error('Error updating dashboard stats:', error);
            }
        }
        
        // Update stats every 30 seconds
        setInterval(updateDashboardStats, 30000);
        
        // Update stats when page loads
        document.addEventListener('DOMContentLoaded', updateDashboardStats);
        
        // Update navbar counts
        function updateNavbarCounts() {
            fetch('/api/live-counts')
                .then(response => response.json())
                .then(data => {
                    const badge = document.getElementById('pendingRegistrationsCount');
                    if (badge) {
                        badge.textContent = data.pendingRegistrations;
                    }
                })
                .catch(error => console.error('Error:', error));
        }
        
        // Update navbar counts every 5 seconds
        updateNavbarCounts();
        setInterval(updateNavbarCounts, 5000);
    </script>
</body>
</html>
