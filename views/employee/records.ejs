<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Records - Marquardt India Pvt. Ltd.</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/responsive.css">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <main class="ml-0 lg:ml-64 p-4 sm:p-6">
        <%- include('../partials/messages') %>
        
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Records</h1>
            <p class="text-gray-600">View your requests and product assignments</p>
        </div>
        
        <!-- Request Status -->
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-4 py-5 sm:p-6">
                <div class="mb-4">
                    <button onclick="toggleSection('requestStatus')" class="w-full flex items-center justify-between text-left focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-lg p-2 hover:bg-gray-50">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">
                            Product Request Status
                        </h3>
                        <i id="requestStatusIcon" class="fas fa-chevron-down text-gray-500 transition-transform duration-200"></i>
                    </button>
                </div>
                <div id="requestStatusContent" class="block">
                <div class="max-h-96 overflow-y-auto">
                    <table class="w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-2/5">
                                    Product
                                </th>
                                <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                    Purpose
                                </th>
                                <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/12">
                                    Status
                                </th>
                                <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/12">
                                    Requested Date
                                </th>
                                <th class="pl-2 pr-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                    Processed By
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (typeof requests !== 'undefined' && requests && requests.length > 0) { %>
                                <% requests.forEach(request => { %>
                                    <tr>
                                        <td class="px-4 py-4" style="max-width: 250px;">
                                            <div class="text-sm font-medium text-gray-900 break-words whitespace-normal leading-tight"><%= request.product_name %></div>
                                        </td>
                                        <td class="px-2 py-4 text-sm text-gray-500">
                                            <div class="break-words"><%= request.purpose || '-' %></div>
                                            <!-- <% if (request.remarks) { %>
                                                <div class="text-xs <%= request.status === 'rejected' ? 'text-red-600' : 'text-blue-600' %> mt-1 italic">Remarks: <%= request.remarks %></div>
                                            <% } %> -->
                                        </td>
                                        <td class="px-2 py-4 whitespace-nowrap text-center">
                                            <% if (request.status === 'approved') { %>
                                                <span class="text-xs font-medium text-green-600">✓ Approved</span>
                                            <% } else if (request.status === 'rejected') { %>
                                                <span class="text-xs font-medium text-red-600">✗ Rejected</span>
                                            <% } else { %>
                                                <span class="text-xs font-medium text-yellow-600">⏳ Pending</span>
                                                <form action="/employee/cancel-request" method="POST" onsubmit="return confirm('Are you sure you want to cancel this request?');" class="inline-block mt-2">
                                                    <input type="hidden" name="request_id" value="<%= request.request_id %>" />
                                                    <button type="submit" title="Cancel Request" class="inline-flex items-center px-2 py-1 border border-red-300 rounded text-xs font-medium text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-500 transition-colors">
                                                        <i class="fas fa-times mr-1"></i> Cancel
                                                    </button>
                                                </form>
                                            <% } %>
                                        </td>
                                        <td class="px-2 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                            <%= new Date(request.requested_at).toLocaleDateString() %>
                                        </td>
                                        <td class="pl-2 pr-4 py-4 text-sm text-gray-500 text-center">
                                            <div class="break-words"><%= request.processed_by_name || '-' %></div>
                                            <% if (request.remarks) { %>
                                                <div class="text-xs <%= request.status === 'rejected' ? 'text-red-600' : 'text-[#009A9A]' %> mt-1 italic">Remarks: <%= request.remarks %></div>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                        No requests found
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
        
        <!-- Tabbed Records Section -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <!-- Tab Navigation -->
                <div class="border-b border-gray-200 mb-4">
                    <nav class="-mb-px flex space-x-8">
                        <button onclick="showTab('assignments')" id="assignments-tab" class="tab-button active py-2 px-1 border-b-2 border-teal-500 font-medium text-sm text-[#009A9A]">
                            Product Assignments
                        </button>
                        <button onclick="showTab('extensions')" id="extensions-tab" class="tab-button py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
                            Extension Requests
                        </button>
                    </nav>
                </div>

                <!-- Assignments Tab -->
                <div id="assignments-content" class="tab-content">
                <div class="max-h-96 overflow-y-auto">
                    <table class="w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-2/5">
                                    Product
                                </th>
                                <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                    Purpose
                                </th>
                                <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/12">
                                    Status
                                </th>
                                <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/12">
                                    Requested Date
                                </th>
                                <th class="pl-2 pr-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                    Processed By
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (typeof assignments !== 'undefined' && assignments && assignments.length > 0) { %>
                                <% assignments.forEach(assignment => { %>
                                    <tr>
                                        <td class="px-4 py-4" style="max-width: 250px;">
                                            <div class="text-sm font-medium text-gray-900 break-words whitespace-normal leading-tight"><%= assignment.product_name %></div>
                                        </td>
                                        <td class="px-2 py-4 text-sm text-gray-500">
                                            <div class="break-words"><%= assignment.return_purpose || '-' %></div>
                                        </td>
                                        <td class="px-2 py-4 whitespace-nowrap text-center">
                                            <% if (assignment.return_request_status === 'pending') { %>
                                                <span class="text-xs font-medium text-yellow-600">⏳ Return Pending</span>
                                            <% } else if (assignment.return_request_status === 'approved') { %>
                                                <span class="text-xs font-medium text-green-600">✓ Returned</span>
                                            <% } else if (assignment.return_request_status === 'rejected') { %>
                                                <span class="text-xs font-medium text-red-600">✗ Return Rejected</span>
                                            <% } else { %>
                                                <span class="text-xs font-medium text-[#009A9A]">📦 Assigned</span>
                                            <% } %>
                                        </td>
                                        <td class="px-2 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                            <% if (assignment.return_requested_date) { %>
                                                <%= new Date(assignment.return_requested_date).toLocaleDateString() %>
                                            <% } else { %>
                                                <%= new Date(assignment.assigned_at).toLocaleDateString() %>
                                            <% } %>
                                        </td>
                                        <td class="pl-2 pr-4 py-4 text-sm text-gray-500 text-center">
                                            <div class="break-words">
                                                <% if (assignment.return_request_status === 'approved' || assignment.return_request_status === 'rejected') { %>
                                                    <%= assignment.returned_processed_by_name || assignment.monitor_name || '-' %>
                                                <% } else { %>
                                                    <%= assignment.monitor_name || '-' %>
                                                <% } %>
                                            </div>
                                            <% if (assignment.remarks) { %>
                                                <div class="text-xs <%= assignment.return_request_status === 'rejected' ? 'text-red-600' : 'text-[#009A9A]' %> mt-1 italic">Remarks: <%= assignment.remarks %></div>
                                            <% } %>
                                            
                                            <!-- Action button for requesting return -->
                                            <% if (assignment.return_request_status === 'assigned' || (assignment.return_request_status === 'rejected' && assignment.remarks)) { %>
                                                <div class="mt-2">
                                                    <form action="/employee/return-product" method="POST" onsubmit="return confirm('Are you sure you want to request return of this product?');" class="inline">
                                                        <input type="hidden" name="assignment_id" value="<%= assignment.assignment_id %>" />
                                                        <button type="submit" title="Request Return" class="text-[#009A9A] hover:text-[#007A7A] text-xs font-medium">
                                                            ↩ Request Return
                                                        </button>
                                                    </form>
                                                </div>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                                
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                        No assignments found
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                </div>

                <!-- Extensions Tab -->
                <div id="extensions-content" class="tab-content hidden">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">My Extension Request History</h3>
                    <div class="max-h-96 overflow-y-auto">
                        <table class="w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-2/5">
                                        Product
                                    </th>
                                    <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                        Original Return Date
                                    </th>
                                    <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                        New Return Date
                                    </th>
                                    <th class="px-2 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                        Reason
                                    </th>
                                    <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/12">
                                        Status
                                    </th>
                                    <th class="pl-2 pr-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">
                                        Requested Date
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% if (typeof extensionRequests !== 'undefined' && extensionRequests && extensionRequests.length > 0) { %>
                                    <% extensionRequests.forEach(extension => { %>
                                        <tr>
                                            <td class="px-4 py-4" style="max-width: 250px;">
                                                <div class="text-sm font-medium text-gray-900 break-words whitespace-normal leading-tight"><%= extension.product_name %></div>
                                            </td>
                                            <td class="px-2 py-4 text-sm text-gray-500">
                                                <% if (extension.return_date) { %>
                                                    <%= new Date(extension.return_date).toLocaleDateString() %>
                                                <% } else { %>
                                                    N/A
                                                <% } %>
                                            </td>
                                            <td class="px-2 py-4 text-sm text-gray-500">
                                                <% if (extension.new_return_date) { %>
                                                    <%= new Date(extension.new_return_date).toLocaleDateString() %>
                                                <% } else { %>
                                                    N/A
                                                <% } %>
                                            </td>
                                            <td class="px-2 py-4 text-sm text-gray-500">
                                                <div class="break-words"><%= extension.extension_reason || 'No reason provided' %></div>
                                            </td>
                                            <td class="px-2 py-4 whitespace-nowrap text-center">
                                                <% if (extension.extension_status === 'approved') { %>
                                                    <span class="text-xs font-medium text-green-600">✓ Approved</span>
                                                <% } else if (extension.extension_status === 'rejected') { %>
                                                    <span class="text-xs font-medium text-red-600">✗ Rejected</span>
                                                <% } else { %>
                                                    <span class="text-xs font-medium text-yellow-600">⏳ Pending</span>
                                                <% } %>
                                            </td>
                                            <td class="pl-2 pr-4 py-4 text-sm text-gray-500 text-center">
                                                <% if (extension.extension_requested_at) { %>
                                                    <%= new Date(extension.extension_requested_at).toLocaleDateString() %>
                                                <% } else { %>
                                                    N/A
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                            No extension requests found
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active', 'border-teal-500', 'text-[#009A9A]');
                button.classList.add('border-transparent', 'text-gray-500');
            });
            
            // Show selected tab content
            document.getElementById(tabName + '-content').classList.remove('hidden');
            
            // Add active class to selected tab
            const activeTab = document.getElementById(tabName + '-tab');
            activeTab.classList.add('active', 'border-teal-500', 'text-[#009A9A]');
            activeTab.classList.remove('border-transparent', 'text-gray-500');
        }
        
        function toggleSection(sectionId) {
            const content = document.getElementById(sectionId + 'Content');
            const icon = document.getElementById(sectionId + 'Icon');
            
            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                content.classList.add('block');
                icon.classList.remove('fa-chevron-right');
                icon.classList.add('fa-chevron-down');
            } else {
                content.classList.remove('block');
                content.classList.add('hidden');
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-right');
            }
        }
    </script>

</body>
</html>