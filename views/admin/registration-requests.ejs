<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Requests - Product Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <main class="ml-0 lg:ml-64 p-4 sm:p-6">
        <%- include('../partials/messages') %>
        
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Registration Requests</h1>
            <p class="text-gray-600">Review and process pending employee registration requests</p>
        </div>

        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    Registration Requests
                </h3>
                
                <% if (requests.length === 0) { %>
                    <div class="text-center py-8">
                        <p class="text-gray-500">No registration requests found</p>
                    </div>
                <% } else { %>
                    <div class="overflow-x-auto w-full">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Name
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Email
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Department
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Status
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% requests.forEach(request => { %>
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                            <%= request.full_name %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= request.email %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <%= request.department_name || 'Unknown' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= request.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : request.status === 'approved' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                                <%= request.status %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <% if (request.status === 'pending') { %>
                                                <form method="POST" action="/admin/process-registration" class="inline-flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2">
                                                    <input type="hidden" name="request_id" value="<%= request.request_id %>">
                                                    <button type="submit" name="action" value="approve" 
                                                            class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-xs">
                                                        Approve
                                                    </button>
                                                    <button type="submit" name="action" value="reject" 
                                                            class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-xs">
                                                        Reject
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <span class="text-gray-400 text-xs">
                                                    Processed
                                                </span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </main>
    
    <script>
        function updateLiveCounts() {
            fetch('/api/live-counts')
                .then(response => response.json())
                .then(data => {
                    const badge = document.getElementById('pendingRegistrationsCount');
                    if (badge) {
                        badge.textContent = data.pendingRegistrations;
                        badge.style.display = 'inline';
                    }
                })
                .catch(error => console.error('Error:', error));
        }
        
        // Update on page load and every 5 seconds
        updateLiveCounts();
        setInterval(updateLiveCounts, 5000);
    </script>
</body>
</html>