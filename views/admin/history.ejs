<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System History - Product Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/responsive.css">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <main class="ml-0 lg:ml-64 p-4 sm:p-6">
        <%- include('../partials/messages') %>
        
        <div class="mb-8">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">System History</h1>
            <p class="text-gray-600">Complete history of product requests, assignments, and recent activity</p>
        </div>
        
        <!-- Recent Activity Section -->
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-4 py-5 sm:p-6">
                <div class="flex items-center justify-between cursor-pointer" onclick="toggleSection('recentActivitySection')">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">
                        <i class="fas fa-clock mr-2 text-blue-500"></i>
                        Recent System Activity (Live Updates)
                    </h3>
                    <i id="recentActivityIcon" class="fas fa-chevron-down text-gray-400 transition-transform duration-200"></i>
                </div>
                <div id="recentActivitySection" class="mt-4">
                    <div id="recentActivity" class="max-h-96 overflow-y-auto scrollbar scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-gray-100">
                        <div class="space-y-3">
                            <!-- Recent activity will be loaded here via JavaScript -->
                            <div class="flex items-center justify-center py-8">
                                <div class="text-gray-500">
                                    <i class="fas fa-spinner fa-spin mr-2"></i>
                                    Loading recent activity...
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
        <!-- Complete History Table -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <div class="flex items-center justify-between cursor-pointer" onclick="toggleSection('completeHistorySection')">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">
                        <i class="fas fa-history mr-2 text-purple-500"></i>
                        Complete System History (All Records)
                    </h3>
                    <i id="completeHistoryIcon" class="fas fa-chevron-down text-gray-400 transition-transform duration-200"></i>
                </div>
                <div id="completeHistorySection" class="mt-4">
                    <div class="max-h-96 overflow-y-auto scrollbar scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-gray-100">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50 sticky top-0">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Type
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Date
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Product
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Employee
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Monitor/Handler
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Quantity
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Status
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% if (history && history.length > 0) { %>
                                    <% history.forEach(record => { %>
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                    <%= record.type === 'assignment' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
                                                    <i class="<%= record.type === 'assignment' ? 'fas fa-box' : 'fas fa-shopping-cart' %> mr-1"></i>
                                                    <%= record.type === 'assignment' ? 'Assignment' : 'Request' %>
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                <%= new Date(record.date).toLocaleDateString() %>
                                                <div class="text-xs text-gray-400">
                                                    <%= new Date(record.date).toLocaleTimeString() %>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                                <%= record.product_name %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                <%= record.employee_name %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                <%= record.monitor_name %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                <%= record.quantity %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                    <%= record.status === 'approved' || record.status === 'Assigned' ? 'bg-green-100 text-green-800' : 
                                                        record.status === 'rejected' ? 'bg-red-100 text-red-800' : 
                                                        record.status === 'Returned' ? 'bg-blue-100 text-blue-800' :
                                                        'bg-yellow-100 text-yellow-800' %>">
                                                    <%= record.status.charAt(0).toUpperCase() + record.status.slice(1) %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                            No history records found
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <script>
        // Function to toggle dropdown sections
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            const icon = document.getElementById(sectionId.replace('Section', 'Icon'));
            
            if (section.style.display === 'none') {
                section.style.display = 'block';
                icon.classList.remove('fa-chevron-right');
                icon.classList.add('fa-chevron-down');
                icon.style.transform = 'rotate(0deg)';
            } else {
                section.style.display = 'none';
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-right');
                icon.style.transform = 'rotate(-90deg)';
            }
        }
        
        // Initialize sections state
        function initializeSections() {
            // Both sections start expanded by default
            const recentSection = document.getElementById('recentActivitySection');
            const completeSection = document.getElementById('completeHistorySection');
            
            recentSection.style.display = 'block';
            completeSection.style.display = 'block';
        }
        
        // Function to update recent activity
        async function updateRecentActivity() {
            try {
                const response = await fetch('/admin/dashboard-stats');
                if (response.ok) {
                    const data = await response.json();
                    updateRecentActivityDisplay(data.recentActivity);
                }
            } catch (error) {
                console.error('Error updating recent activity:', error);
            }
        }
        
        // Function to display recent activity
        function updateRecentActivityDisplay(activities) {
            const activityContainer = document.getElementById('recentActivity');
            
            if (!activities || activities.length === 0) {
                activityContainer.innerHTML = `
                    <div class="text-gray-500 text-center py-8">
                        <i class="fas fa-inbox text-3xl mb-2"></i>
                        <p>No recent activity to display.</p>
                    </div>
                `;
                return;
            }
            
            const activityHTML = activities.map(activity => {
                const date = new Date(activity.date).toLocaleDateString() + ' at ' + new Date(activity.date).toLocaleTimeString();
                let icon, statusClass, actionText, bgClass;
                
                if (activity.type === 'request') {
                    icon = 'fas fa-shopping-cart text-blue-500';
                    actionText = `requested ${activity.quantity} x ${activity.product_name}`;
                    bgClass = 'border-l-4 border-blue-500';
                } else if (activity.type === 'assignment') {
                    icon = 'fas fa-box text-green-500';
                    actionText = `${activity.status} ${activity.quantity} x ${activity.product_name}`;
                    bgClass = 'border-l-4 border-green-500';
                } else if (activity.type === 'registration') {
                    icon = 'fas fa-user-plus text-orange-500';
                    actionText = 'submitted registration request';
                    bgClass = 'border-l-4 border-orange-500';
                }
                
                if (activity.status === 'pending') {
                    statusClass = 'bg-yellow-100 text-yellow-800';
                } else if (activity.status === 'approved' || activity.status === 'assigned') {
                    statusClass = 'bg-green-100 text-green-800';
                } else if (activity.status === 'rejected') {
                    statusClass = 'bg-red-100 text-red-800';
                } else if (activity.status === 'returned') {
                    statusClass = 'bg-blue-100 text-blue-800';
                } else {
                    statusClass = 'bg-gray-100 text-gray-800';
                }
                
                return `
                    <div class="flex items-center justify-between py-3 px-4 ${bgClass} bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
                        <div class="flex items-center space-x-3">
                            <div class="flex-shrink-0">
                                <i class="${icon}"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-900">
                                    ${activity.employee_name} ${actionText}
                                </p>
                                <p class="text-xs text-gray-500">
                                    <i class="fas fa-clock mr-1"></i>
                                    ${date}
                                </p>
                            </div>
                        </div>
                        <div class="flex-shrink-0">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${statusClass}">
                                ${activity.status}
                            </span>
                        </div>
                    </div>
                `;
            }).join('');
            
            activityContainer.innerHTML = `<div class="space-y-3">${activityHTML}</div>`;
        }
        
        // Auto-refresh recent activity every 30 seconds
        setInterval(updateRecentActivity, 30000);
        
        // Load recent activity when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeSections();
            updateRecentActivity();
            addRealTimeIndicators();
        });
        
        // Add refresh button functionality
        function refreshHistory() {
            location.reload();
        }
        
        // Initialize real-time indicators
        function addRealTimeIndicators() {
            const title = document.querySelector('h1');
            const indicator = document.createElement('span');
            indicator.className = 'ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800';
            indicator.innerHTML = '<i class="fas fa-circle fa-pulse mr-1"></i>Live';
            title.appendChild(indicator);
        }
    </script>
</body>
</html>
