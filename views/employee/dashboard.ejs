    <title>Employee Dashboard - Marquardt India Pvt. Ltd.</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/responsive.css">
</head>
<body class="bg-gray-50">
    <%- include('../partials/navbar') %>
    
    <main class="ml-0 md:ml-64 flex flex-col h-screen">
        <!-- Fixed Header Section -->
        <div class="flex-shrink-0 p-4 sm:p-6 bg-gray-50 border-b border-gray-200">
            <%- include('../partials/messages') %>
            
            <div class="mb-4">
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Employee Dashboard</h1>
                <p class="text-gray-600">Welcome back, <%= user.full_name %>!</p>
            </div>
        </div>
        
        <!-- Scrollable Content Area -->
        <div class="flex-1 overflow-y-auto p-4 sm:p-6">
            <!-- Dashboard Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8 max-w-2xl mx-auto">
            <!-- Employee Profile Card -->
            <a href="/employee/account" class="group">
                <div class="bg-white hover:bg-blue-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-blue-200 aspect-square">
                    <div class="text-center h-full flex flex-col justify-center items-center">
                        <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center mb-1">
                            <i class="fas fa-user text-lg text-blue-500"></i>
                        </div>
                        <h3 class="text-base font-medium text-gray-800">Employee Profile</h3>
                        <p class="text-xs text-gray-500">View personal information</p>
                    </div>
                </div>
            </a>

            <!-- My Products Card -->
            <a href="/employee/my-products" class="group">
                <div class="bg-white hover:bg-orange-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-orange-200 aspect-square">
                    <div class="text-center h-full flex flex-col justify-center items-center">
                        <div class="w-12 h-12 bg-orange-50 rounded-full flex items-center justify-center mb-1">
                            <i class="fas fa-laptop text-lg text-orange-500"></i>
                        </div>
                        <h3 class="text-base font-medium text-gray-800">My Products</h3>
                        <p class="text-xs text-gray-500">Products I currently have</p>
                    </div>
                </div>
            </a>
            
            <!-- View Stock Card -->
            <a href="/employee/stock" class="group">
                <div class="bg-white hover:bg-green-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-green-200 aspect-square">
                    <div class="text-center h-full flex flex-col justify-center items-center">
                        <div class="w-12 h-12 bg-green-50 rounded-full flex items-center justify-center mb-1">
                            <i class="fas fa-boxes text-lg text-green-500"></i>
                        </div>
                        <h3 class="text-base font-medium text-gray-800">View Stock</h3>
                        <p class="text-xs text-gray-500">Browse available inventory</p>
                    </div>
                </div>
            </a>

            <!-- View Records Card -->
            <a href="/employee/records" class="group">
                <div class="bg-white hover:bg-purple-50 rounded-lg shadow hover:shadow-md transition-all duration-200 border border-gray-200 hover:border-purple-200 aspect-square">
                    <div class="text-center h-full flex flex-col justify-center items-center">
                        <div class="w-12 h-12 bg-purple-50 rounded-full flex items-center justify-center mb-1">
                            <i class="fas fa-history text-lg text-purple-500"></i>
                        </div>
                        <h3 class="text-base font-medium text-gray-800">View Records</h3>
                        <p class="text-xs text-gray-500">Check assignment history</p>
                    </div>
                </div>
            </a>
        </div>
    </main>
</body>
</html>