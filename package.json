{
  "name": "product-management-system",
  "version": "1.0.0",
  "description": "Marquardt India Pvt. Ltd. for GCP",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "global": "node -e \"console.log('ðŸŒ Starting with global access...'); require('child_process').spawn('cmd', ['/c', 'scripts/quick-global.bat'], {stdio: 'inherit'});\"",
    "tunnel": "node -e \"console.log('ðŸš€ Choose your tunnel...'); require('child_process').spawn('cmd', ['/c', 'scripts/global-access.bat'], {stdio: 'inherit'});\"",
    "setup-db": "node scripts/setup-db.js",
    "setup-local": "bash setup-local.sh",
    "setup-local-win": "powershell -ExecutionPolicy Bypass -File setup-local.ps1",
    "gcp-deploy": "gcloud app deploy",
    "build-exe": "pkg server.js --targets node18-win-x64 --output dist/inventory-management.exe",
    "build-portable": "node scripts/setup-sqlite.js && pkg server.js --targets node18-win-x64 --output dist/inventory-management-portable.exe",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pkg": {
    "assets": [
      "views/**/*.ejs",
      "public/**/*",
      "config/**/*",
      "sql/**/*",
      "uploads/**/*"
    ],
    "scripts": [
      "src/**/*.js",
      "setup-sqlite.js"
    ]
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-flash": "^0.0.2",
    "express-mysql-session": "^3.0.2",
    "express-session": "^1.18.0",
    "fs-extra": "^11.3.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.0",
    "nodemailer": "^7.0.9",
    "xlsx": "^0.18.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
