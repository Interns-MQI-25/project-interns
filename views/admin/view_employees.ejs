<!DOCTYPE html>
<html>
<head>
  <title>View Employees</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Existing Employees</h1>

  <% if (employees && employees.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Username</th>
          <th>Email</th>
          <th>Department</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(employee => { %>
          <tr>
            <td><%= employee.full_name %></td>
            <td><%= employee.username %></td>
            <td><%= employee.email %></td>
            <td><%= employee.department_name %></td>
            <td>
              <a href="/admin/manage-employees/edit/<%= employee.user_id %>">Edit</a>
              <form action="/admin/manage-employees/delete/<%= employee.user_id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No employees found.</p>
  <% } %>

  <p><a href="/admin/dashboard">Back to Admin Dashboard</a></p>
</body>
</html>